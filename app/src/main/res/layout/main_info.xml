<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/main_info_type"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/line"
        android:orientation="vertical"
        android:showDividers="beginning|end|middle"
        android:stretchColumns="*">

        <TableRow
            android:divider="@drawable/line"
            android:orientation="horizontal"
            android:showDividers="beginning|middle|end">

            <TextView
                android:id="@+id/city_code"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="城市代码\n000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/ten_mach_id"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="腾讯商户号\n00000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/union_mch_id"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="银联商户号\n00000000000"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:divider="@drawable/line"
            android:orientation="horizontal"
            android:showDividers="beginning|middle|end">

            <TextView
                android:id="@+id/line_name"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="线路名\n000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/driver_no"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="司机号\n00000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/union_pos_sn"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="银联POS编号\n00000000000"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:divider="@drawable/line"
            android:orientation="horizontal"
            android:showDividers="beginning|middle|end">

            <TextView
                android:id="@+id/pos_sn"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="车载编号\nQ600000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/black_version"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="黑名单版本\n000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/black_cnt"
                android:layout_width="1dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:lineSpacingExtra="5dp"
                android:padding="8dp"
                android:text="黑名单数量\n00000000"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

</LinearLayout>